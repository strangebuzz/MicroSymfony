{
    "formatter": {
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 100
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "semicolons": "always",
            "trailingCommas": "all"
        }
    },
    "css": {
        "formatter": {
            "quoteStyle": "single"
        }
    },
    "linter": {
        "rules": {
            "complexity": {
                "useArrowFunction": "off"
            }
        }
    },
    "files": {
        "include": ["./assets"],
        "ignore": ["assets/vendor/*"]
    }
}
